<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="sonha_warranty_cat_security">
        <field name="name">Warranty Son Ha</field>
        <field name="sequence">2</field>
    </record>

    <record id="group_warranty_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id" ref="sonha_warranty_cat_security"/>
    </record>

    <record id="group_warranty_input" model="res.groups">
        <field name="name">Nhập liệu</field>
        <field name="category_id" ref="sonha_warranty_cat_security"/>
    </record>

    <record id="group_warranty_manager" model="res.groups">
        <field name="name">Quản lý</field>
        <field name="category_id" ref="sonha_warranty_cat_security"/>
    </record>

    <record id="group_warranty_employee" model="res.groups">
        <field name="name">Nhân viên bảo hành</field>
        <field name="category_id" ref="sonha_warranty_cat_security"/>
    </record>

    <record id="rule_bh_branch_all" model="ir.rule">
        <field name="name">Rule Bh Branch</field>
        <field name="model_id" ref="model_bh_branch"/>
        <field name="domain_force">
            ['|',
                ('company_id', '=', user.company_id.id),
                ('company_id', 'in', user.company_ids.ids)
            ]
        </field>
    </record>

    <record id="rule_warranty_information_input" model="ir.rule">
        <field name="name">Rule warranty information Input</field>
        <field name="model_id" ref="model_warranty_information"/>
        <field name="domain_force">
            ['|',
                ('branch_id.company_id', '=', user.company_id.id),
                ('branch_id.company_id', 'in', user.company_ids.ids)
            ]
        </field>
        <field name="groups" eval="[(4, ref('sonha_baohanh.group_warranty_input'))]"/>
    </record>

    <record id="rule_warranty_information_manager" model="ir.rule">
        <field name="name">Rule warranty information Manager</field>
        <field name="model_id" ref="model_warranty_information"/>
        <field name="domain_force">
            ['|',
                ('branch_id.company_id', '=', user.company_id.id),
                ('branch_id.company_id', 'in', user.company_ids.ids)
            ]
        </field>
        <field name="groups" eval="[(4, ref('sonha_baohanh.group_warranty_manager'))]"/>
    </record>

