<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_import_infor_form" model="ir.ui.view">
        <field name="name">import.infor.form</field>
        <field name="model">wizard.import.infor</field>
        <field name="arch" type="xml">
            <form string="Chọn file">
                <group>
                    <field name="file"/>
                    <field name="model"/>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="Nhập" class="btn-primary"/>
                    <button string="Hủy" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_infor_wizard" model="ir.actions.act_window">
        <field name="name">Chọn file import</field>
        <field name="res_model">wizard.import.infor</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>