<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_organization_tree_view" model="ir.ui.view">
            <field name="name">sale.organization.tree.view</field>
            <field name="model">sale.organization</field>
            <field name="arch" type="xml">
                <tree string="Tổ chức bán hàng" editable="bottom">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="x_note"/>
                </tree>
            </field>
        </record>

        <record id="sale_organization_action" model="ir.actions.act_window">
            <field name="name">Tổ chức bán hàng</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.organization</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>