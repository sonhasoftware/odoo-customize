<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="customer_assignment_group_tree_view" model="ir.ui.view">
        <field name="name">customer.assignment.group.tree.view</field>
        <field name="model">customer.assignment.group</field>
        <field name="arch" type="xml">
            <tree string="Hoạch toán doanh thu" editable="bottom">
                <field name="code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="customer_assignment_group_action" model="ir.actions.act_window">
        <field name="name">Hoạch toán doanh thu</field>
        <field name="res_model">customer.assignment.group</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>