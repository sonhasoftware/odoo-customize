<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_line_tree_view" model="ir.ui.view">
            <field name="name">product.line.tree.view</field>
            <field name="model">product.line</field>
            <field name="arch" type="xml">
                <tree string="Dòng sản phẩm" editable="bottom">
                    <field name="name"/>
                    <field name="material_type" widget="many2many_tags"/>
                    <field name="is_main_material"/>
                </tree>
            </field>
        </record>

        <record id="product_line_action" model="ir.actions.act_window">
            <field name="name">Dòng sản phẩm</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.line</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>