<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="x_division_tree_view" model="ir.ui.view">
            <field name="name">x.division.tree.view</field>
            <field name="model">x.division</field>
            <field name="arch" type="xml">
                <tree string="Lĩnh vực" editable="bottom">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_x_division" model="ir.actions.act_window">
            <field name="name">Lĩnh vực</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">x.division</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>