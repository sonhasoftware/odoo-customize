<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="overhead_group_tree_view" model="ir.ui.view">
            <field name="name">overhead.group.tree.view</field>
            <field name="model">overhead.group</field>
            <field name="arch" type="xml">
                <tree string="Nhóm chi phí chung" editable="bottom">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="company_id"/>
                    <field name="plant"/>
                </tree>
            </field>
        </record>

        <record id="overhead_group_action" model="ir.actions.act_window">
            <field name="name">Nhóm chi phí chung</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">overhead.group</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>