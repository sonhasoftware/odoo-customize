<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="cus_group_tree_view" model="ir.ui.view">
        <field name="name">cus.group.tree.view</field>
        <field name="model">cus.group</field>
        <field name="arch" type="xml">
            <tree string="Nhóm khách hàng" editable="bottom">
                <field name="sap_code"/>
                <field name="symbol"/>
                <field name="description"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id="cus_group_action" model="ir.actions.act_window">
        <field name="name">Nhóm khách hàng</field>
        <field name="res_model">cus.group</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>