<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_substance_tree_view" model="ir.ui.view">
            <field name="name">product.substance.tree.view</field>
            <field name="model">product.substance</field>
            <field name="arch" type="xml">
                <tree string="Chất liệu" editable="bottom">
                    <field name="name"/>
                    <field name="note"/>
<!--                    <field name="product_stage"/>-->
                </tree>
            </field>
        </record>

        <record id="product_substance_action" model="ir.actions.act_window">
            <field name="name">Chất liệu</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.substance</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>