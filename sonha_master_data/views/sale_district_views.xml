        <field name="name">sale.district.tree.view</field>
        <field name="model">sale.district</field>
        <field name="arch" type="xml">
            <tree string="Vùng kinh doanh" editable="bottom">
                <field name="code"/>
                <field name="description"/>
            </tree>
