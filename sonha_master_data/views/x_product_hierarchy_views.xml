<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="x_product_hierarchy_tree_view" model="ir.ui.view">
            <field name="name">x.product.hierarchy.tree.view</field>
            <field name="model">x.product.hierarchy</field>
            <field name="arch" type="xml">
                <tree string="Quản lý PRH" editable="bottom">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="level"/>
                </tree>
            </field>
        </record>

        <record id="x_product_hierarchy_action" model="ir.actions.act_window">
            <field name="name">Quản lý PRH</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">x.product.hierarchy</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>