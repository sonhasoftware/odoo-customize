<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="x_material_type_tree_view" model="ir.ui.view">
            <field name="name">x.material.type.tree.view</field>
            <field name="model">x.material.type</field>
            <field name="arch" type="xml">
                <tree string="Loại sản phẩm" editable="bottom">
                    <field name="x_code"/>
                    <field name="name"/>
                    <field name="x_qty_manage"/>
                    <field name="x_value_manage"/>
                    <field name="x_price_type"/>
                </tree>
            </field>
        </record>

        <record id="x_material_type_action" model="ir.actions.act_window">
            <field name="name">Phân loại sản phẩm</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">x.material.type</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>