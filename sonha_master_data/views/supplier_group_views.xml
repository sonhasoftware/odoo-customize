<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="supplier_group_tree_view" model="ir.ui.view">
            <field name="name">supplier.group.tree.view</field>
            <field name="model">supplier.group</field>
            <field name="arch" type="xml">
                <tree string="Quản lý PRH" editable="bottom">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="supplier_group_action" model="ir.actions.act_window">
            <field name="name">Nhóm Nhà cung cấp</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">supplier.group</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>