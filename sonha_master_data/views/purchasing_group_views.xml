<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="purchasing_group_tree_view" model="ir.ui.view">
        <field name="name">purchasing.group.tree.view</field>
        <field name="model">purchasing.group</field>
        <field name="arch" type="xml">
            <tree string="Nhóm mua hàng" editable="bottom">
                <field name="purchasing_group_code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="purchasing_group_action" model="ir.actions.act_window">
        <field name="name">Nhóm mua hàng</field>
        <field name="res_model">purchasing.group</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>