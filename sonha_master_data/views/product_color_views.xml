<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_color_tree_view" model="ir.ui.view">
            <field name="name">product.color.tree.view</field>
            <field name="model">product.color</field>
            <field name="arch" type="xml">
                <tree string="Màu sắc" editable="bottom">
                    <field name="name"/>
                    <field name="note"/>
<!--                    <field name="product_stage"/>-->
                </tree>
            </field>
        </record>

        <record id="product_color_action" model="ir.actions.act_window">
            <field name="name">Màu sắc</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.color</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>