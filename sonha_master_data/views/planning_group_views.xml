<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="planning_group_tree_view" model="ir.ui.view">
        <field name="name">planning.group.tree.view</field>
        <field name="model">planning.group</field>
        <field name="arch" type="xml">
            <tree string="Nhóm quy hoạch" editable="bottom">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="planning_group_action" model="ir.actions.act_window">
        <field name="name">Nhóm quy hoạch</field>
        <field name="res_model">planning.group</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>