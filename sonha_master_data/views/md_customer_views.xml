<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="md_customer_tree_view" model="ir.ui.view">
        <field name="name">md.customer.tree.view</field>
        <field name="model">md.customer</field>
        <field name="arch" type="xml">
            <tree string="Master Data Khách hàng" editable="bottom">
                <field name="customer_code"/>
                <field name="customer_name"/>
                <field name="address"/>
                <field name="customer_type_id"/>
                <field name="customer_group_id"/>
            </tree>
        </field>
    </record>

    <record id="md_customer_action" model="ir.actions.act_window">
        <field name="name">Master Data Khách hàng</field>
        <field name="res_model">md.customer</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>