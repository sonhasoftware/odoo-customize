<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="md_customer_tree_view" model="ir.ui.view">
        <field name="name">md.customer.tree.view</field>
        <field name="model">md.customer</field>
        <field name="arch" type="xml">
            <tree string="Master Data Khách hàng">
                <field name="customer_code"/>
                <field name="customer_name"/>
                <field name="customer_class"/>
                <field name="cust_phone"/>
                <field name="address"/>
                <field name="country_id"/>
                <field name="state_id"/>
                <field name="tax_code"/>
                <field name="customer_type_id"/>
                <field name="customer_group_id"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="md_customer_form_view" model="ir.ui.view">
        <field name="name">md.customer.form.view</field>
        <field name="model">md.customer</field>
        <field name="arch" type="xml">
            <form string="Khách hàng">
                <sheet>
                    <group>
                        <field name="customer_code"/>
                        <field name="customer_group_id"/>
                    </group>
                    <notebook>
                        <page string="Thông tin khách hàng">
                            <group string="Thông tin cơ bản">
                                <group>
                                    <field name="customer_short_name"/>
                                    <field name="customer_name"/>
                                    <field name="search_term"/>
                                    <field name="customer_class"/>
                                    <field name="cccd_number"/>
                                    <field name="cust_phone"/>
                                    <field name="mail_address"/>
                                    <field name="fax_number"/>
                                    <field name="tax_code"/>
                                    <field name="postal_code"/>
                                </group>
                                <group>
                                    <field name="address"/>
                                    <field name="search_term_2"/>
                                    <field name="country_id"/>
                                    <field name="state_id"/>
                                    <field name="district_id"/>
                                    <field name="ward_id"/>
                                    <field name="language"/>
                                    <field name="company_id"/>
                                    <field name="legal_representative"/>
                                </group>
                            </group>
                            <group string="Thông tin ngân hàng">
                                <group>
                                    <field name="bank_country_code"/>
                                    <field name="bank_key"/>
                                </group>
                                <group>
                                    <field name="bank_number"/>
                                    <field name="bank_owner"/>
                                </group>
                            </group>
                            <group string="Thông tin sale">
                                <group>
                                    <field name="customer_type_id"/>
                                    <field name="sale_man"/>
                                </group>
                                <group>
                                    <field name="region_manager"/>
                                    <field name="area_manager"/>
                                </group>
                            </group>
                        </page>
                        <page string="FI">
                            <group>
                                <group>
                                    <field name="company_code"/>
                                    <field name="vendor_code"/>
                                    <field name="trading_partner"/>
                                    <field name="reconciliation_account"/>
                                </group>
                                <group>
                                    <field name="payment_term"/>
                                    <field name="payment_method" widget="many2many_tags"/>
                                    <field name="old_customer_code"/>
                                </group>
                            </group>
                        </page>
                        <page string="Thông tin bán hàng">
                            <group>
                                <field name="customer_sale" string="">
                                    <tree editable="bottom">
                                        <field name="sale_organization"/>
                                        <field name="distribution_channel"/>
                                        <field name="division"/>
                                        <field name="sale_district"/>
                                        <field name="cus_group_1"/>
                                        <field name="cus_group"/>
                                        <field name="sale_office"/>
                                        <field name="currency"/>
                                        <field name="customer_price_group"/>
                                        <field name="relevant_settlement"/>
                                        <field name="plant"/>
                                        <field name="order_combination"/>
                                        <field name="shipping_condition"/>
                                        <field name="pod_relevant"/>
                                        <field name="incoterm"/>
                                        <field name="incoterm_more"/>
                                        <field name="payment_term"/>
                                        <field name="customer_assignment_group"/>
                                        <field name="tax_classification"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Thông tin bán hàng part.Funct">
                            <group>
                                <field name="customer_sale" string="">
                                    <tree editable="bottom">
                                        <field name="sale_organization"/>
                                        <field name="distribution_channel"/>
                                        <field name="division"/>
                                        <field name="sold_to"/>
                                        <field name="ship_to"/>
                                        <field name="bill_to"/>
                                        <field name="payer"/>
                                        <field name="contract_person"/>
                                        <field name="sale_employee"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Hạn mức tín dụng">
                            <group>
                                <field name="credit_limit" string="">
                                    <tree editable="bottom">
                                        <field name="credit_segment"/>
                                        <field name="credit_limit"/>
                                        <field name="valid_date"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Mối quan hệ">
                            <group>
                                <field name="relationship" string="">
                                    <tree editable="bottom">
                                        <field name="emp_relationship_1"/>
                                        <field name="rel_category"/>
                                        <field name="emp_relationship_2"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="md_customer_action" model="ir.actions.act_window">
        <field name="name">Master Data Khách hàng</field>
        <field name="res_model">md.customer</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>