<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="special_procument_type_tree_view" model="ir.ui.view">
        <field name="name">special.procument.type.tree.view</field>
        <field name="model">special.procument.type</field>
        <field name="arch" type="xml">
            <tree string="Hình thức cung ứng đặc biệt" editable="bottom">
                <field name="name"/>
                <field name="procument_type_name"/>
                <field name="sonha_plant" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="special_procument_type_action" model="ir.actions.act_window">
        <field name="name">Hình thức cung ứng đặc biệt</field>
        <field name="res_model">special.procument.type</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>