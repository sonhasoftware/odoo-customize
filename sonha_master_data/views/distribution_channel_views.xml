<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="distribution_channel_tree_view" model="ir.ui.view">
            <field name="name">distribution.channel.tree.view</field>
            <field name="model">distribution.channel</field>
            <field name="arch" type="xml">
                <tree string="Kênh bán hàng" editable="bottom">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="x_note"/>
                </tree>
            </field>
        </record>

        <record id="distribution_channel_action" model="ir.actions.act_window">
            <field name="name">Kênh bán hàng</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">distribution.channel</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>