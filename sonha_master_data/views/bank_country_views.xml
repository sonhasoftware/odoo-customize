<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="bank_country_tree_view" model="ir.ui.view">
        <field name="name">bank.country.tree.view</field>
        <field name="model">bank.country</field>
        <field name="arch" type="xml">
            <tree string="Quốc gia" editable="bottom">
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="bank_country_action" model="ir.actions.act_window">
        <field name="name">Quốc gia</field>
        <field name="res_model">bank.country</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>