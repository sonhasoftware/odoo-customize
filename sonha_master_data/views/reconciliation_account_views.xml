<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="reconciliation_account_tree_view" model="ir.ui.view">
        <field name="name">reconciliation.account.tree.view</field>
        <field name="model">reconciliation.account</field>
        <field name="arch" type="xml">
            <tree string="Tài khoản kế toán" editable="bottom">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="reconciliation_account_action" model="ir.actions.act_window">
        <field name="name">Tài khoản kế toán</field>
        <field name="res_model">reconciliation.account</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>