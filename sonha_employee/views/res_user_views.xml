<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sonha_user_form_view" model="ir.ui.view">
        <field name="name">sonha.user.form.view</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="inside">
                <div>
                    <label for="device_id"/>
                    <field name="device_id" string="Thiết bị"/>
                    <label for="option_check"/>
                    <field name="option_check" string="Kiểu CC"/>
                    <label for="device_number"/>
                    <field name="device_number" string="Số cài đặt thiết bị"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>