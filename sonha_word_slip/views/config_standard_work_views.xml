<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_config_standard_work_tree" model="ir.ui.view">
        <field name="name">view.config.standard.work.tree</field>
        <field name="model">config.standard.work</field>
        <field name="arch" type="xml">
            <tree string="Cấu hình công chuẩn trong tháng" editable="bottom">
                <field name="department_id"/>
                <field name="company_id"/>
                <field name="month"/>
                <field name="year"/>
                <field name="work_actual"/>
                <field name="work_apply"/>
            </tree>
        </field>
    </record>

    <record id="action_config_standard_work" model="ir.actions.act_window">
        <field name="name">Cấu hình công chuẩn</field>
        <field name="res_model">config.standard.work</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>