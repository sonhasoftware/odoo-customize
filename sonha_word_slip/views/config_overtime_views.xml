<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_config_overtime_tree" model="ir.ui.view">
        <field name="name">config.overtime.tree</field>
        <field name="model">config.overtime</field>
        <field name="arch" type="xml">
            <tree string="Cấu hình làm thêm" editable="bottom">
                <field name="department_id"/>
                <field name="percent"/>
            </tree>
        </field>
    </record>

    <record id="action_config_overtime" model="ir.actions.act_window">
        <field name="name">Cấu hình làm thêm</field>
        <field name="res_model">config.overtime</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>