<odoo>
    <record id="view_employee_attendance_v2_list" model="ir.ui.view">
        <field name="name">employee.attendance.v2.list</field>
        <field name="model">employee.attendance.v2</field>
        <field name="arch" type="xml">
            <tree string="Chấm công chi tiết" default_order="employee_id, date desc">
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="weekday"/>
                <field name="date"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="shift"/>
                <field name="note"/>
                <field name="minutes_late"/>
                <field name="minutes_early"/>
                <field name="forgot_time"/>
                <field name="work_day"/>
                <field name="actual_work"/>
                <field name="over_time"/>
                <field name="leave"/>
                <field name="compensatory"/>
                <field name="month" column_invisible="True"/>
            </tree>
        </field>
    </record>

    <record id="employee_attendance_v2_action" model="ir.actions.act_window">
        <field name="name">Chấm công chi tiết</field>
        <field name="res_model">employee.attendance.v2</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_employee_attendance_v2_list"/>
    </record>

</odoo>
