<odoo>
    <record id="view_wizard_tu_choi_form" model="ir.ui.view">
        <field name="name">wizard.dk.vb.tu.choi.form</field>
        <field name="model">wizard.dk.vb.tu.choi</field>
        <field name="arch" type="xml">
            <form string="Lý do từ chối">
                <group>
                    <field name="reason"/>
                </group>
                <footer>
                    <button string="Xác nhận"
                            type="object"
                            name="action_confirm"
                            class="btn-primary"/>
                    <button string="Hủy"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_tu_choi" model="ir.actions.act_window">
        <field name="name">Từ Chối Văn Bản</field>
        <field name="res_model">wizard.dk.vb.tu.choi</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
