<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_bao_cao_van_ban_tree" model="ir.ui.view">
        <field name="name">bao.cao.van.ban.tree</field>
        <field name="model">bao.cao.van.ban</field>
        <field name="arch" type="xml">
            <tree string="Báo cáo văn bản" create="0" edit="0" decoration-danger="mau == 1">
