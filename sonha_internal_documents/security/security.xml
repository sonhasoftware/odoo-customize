<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.module.category" id="sonha_van_ban_security">
        <field name="name">Văn bản Sơn Hà</field>
        <field name="sequence">3</field>
    </record>

    <record id="group_user_van_ban" model="res.groups">
        <field name="name">Nhân viên</field>
        <field name="category_id" ref="sonha_van_ban_security"/>
    </record>

    <record id="group_admin_van_ban" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id" ref="sonha_van_ban_security"/>
    </record>

    <record id="rule_user_van_ban" model="ir.rule">
        <field name="name">rule user van ban</field>
        <field name="model_id" ref="model_dk_vb_h"/>
        <field name="domain_force">
            ['|',
                ('create_uid', '=', user.id),
                ('dk_vb_d.user_duyet', '=', user.id)
            ]
        </field>
        <field name="groups" eval="[(4, ref('group_user_van_ban'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="rule_admin_van_ban" model="ir.rule">
        <field name="name">rule admin van ban</field>
        <field name="model_id" ref="model_dk_vb_h"/>
        <field name="domain_force">
            [(1, '=', 1)]
        </field>
        <field name="groups" eval="[(4, ref('group_admin_van_ban'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>