<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="employee_shift_report_tree_view" model="ir.ui.view">
        <field name="name">employee.shift.report.tree.view</field>
        <field name="model">employee.shift.report</field>
        <field name="arch" type="xml">
            <tree string="Báo cáo ca làm việc">
                <field name="employee_code"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="weekday"/>
                <field name="date"/>
                <field name="shift"/>
            </tree>
        </field>
    </record>

    <record id="employee_shift_report_action" model="ir.actions.act_window">
        <field name="name">Báo cáo ca làm việc</field>
        <field name="res_model">employee.shift.report</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>