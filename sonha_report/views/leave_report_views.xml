<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="leave_report_tree_view" model="ir.ui.view">
        <field name="name">leave.report.tree.view</field>
        <field name="model">leave.report</field>
        <field name="arch" type="xml">
            <tree string="Báo cáo phép chi tiết">
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="begin_period"/>
                <field name="date"/>
                <field name="leave"/>
                <field name="total_leave_left"/>
            </tree>
        </field>
    </record>

    <record id="leave_report_action" model="ir.actions.act_window">
        <field name="name">Báo cáo phép chi tiết</field>
        <field name="res_model">leave.report</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>