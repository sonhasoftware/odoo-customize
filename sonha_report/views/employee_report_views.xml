    <record id="action_server_send_employee_report" model="ir.actions.server">
        <field name="name">Xuất báo cáo</field>
        <field name="model_id" ref="sonha_report.model_employee_report"/>
        <field name="binding_model_id" ref="sonha_report.model_employee_report"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">
            action = {
                "type": "ir.actions.act_window",
                "res_model": "export.report.employee",
                "view_mode": "form",
                "target": "new",
                "context": {
                    "default_res_model": env['ir.model']._get('employee.report').id,
                    "active_model": "employee.report",
                    "active_ids": records.ids,
                }
            }
        </field>
