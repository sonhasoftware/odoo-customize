<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_config_template_report_tree" model="ir.ui.view">
        <field name="name">config.template.report.tree</field>
        <field name="model">config.template.report</field>
        <field name="arch" type="xml">
            <tree string="Chọn mẫu báo cáo" editable="bottom">
                <field name="name"/>
                <field name="file"/>
                <field name="apply"/>
                <field name="key"/>
            </tree>
        </field>
    </record>

    <record id="action_config_template_report" model="ir.actions.act_window">
        <field name="name">Cấu hình template</field>
        <field name="res_model">config.template.report</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>