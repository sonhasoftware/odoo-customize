<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="word_slip_report_tree_view" model="ir.ui.view">
        <field name="name">word.slip.report.tree.view</field>
        <field name="model">word.slip.report</field>
        <field name="arch" type="xml">
            <tree string="Báo cáo đơn từ">
                <field name="slip_code"/>
                <field name="department_id"/>
                <field name="create_emp"/>
                <field name="employee_id"/>
                <field name="employee_ids" widget="many2many_tags"/>
                <field name="slip_create_date"/>
                <field name="slip_type"/>
                <field name="all_date"/>
                <field name="status"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>

    <record id="word_slip_report_action" model="ir.actions.act_window">
        <field name="name">Báo cáo đơn từ</field>
        <field name="res_model">word.slip.report</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>