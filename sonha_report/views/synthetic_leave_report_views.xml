<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="synthetic_leave_report_tree_view" model="ir.ui.view">
        <field name="name">synthetic.leave.report.tree.view</field>
        <field name="model">synthetic.leave.report</field>
        <field name="arch" type="xml">
            <tree string="Báo cáo phép tổng hợp">
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="from_date"/>
                <field name="to_date"/>
                <field name="begin_period"/>
                <field name="leave"/>
                <field name="total_leave_left"/>
            </tree>
        </field>
    </record>

    <record id="synthetic_leave_report_action" model="ir.actions.act_window">
        <field name="name">Báo cáo phép tổng hợp</field>
        <field name="res_model">synthetic.leave.report</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>