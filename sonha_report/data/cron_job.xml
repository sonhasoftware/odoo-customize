<odoo>
    <data noupdate="0">
        <record id="cron_update_leave_left" model="ir.cron">
            <field name="name">Cập nhật phép còn và đã dùng nhân viên</field>
            <field name="model_id" ref="model_leave_left"/>
            <field name="state">code</field>
            <field name="code">model.update_employee_leave_left()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="datetime.now().replace(hour=1, minute=0, second=0)"/>
        </record>
    </data>
</odoo>