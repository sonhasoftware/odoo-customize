<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="popup_word_slip_report_form_view" model="ir.ui.view">
        <field name="name">popup.word.slip.report.form.view</field>
        <field name="model">popup.word.slip.report</field>
        <field name="arch" type="xml">
            <form string="Báo cáo đơn từ">
                <group>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="company_id" options="{'no_create': True}"/>
                    <field name="department_domain" invisible="1"/>
                    <field name="department_id" domain="department_domain" options="{'no_create': True}"/>
                    <field name="employee_domain" invisible="1"/>
                    <field name="employee_id" domain="employee_domain" widget="many2many_tags" options="{'no_create': True}"/>
                    <field name="slip_type"/>
                    <field name="status"/>
                </group>
                <footer>
                    <button string="Xác nhận" type="object" name="action_confirm" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_word_slip_work_report" model="ir.actions.act_window">
        <field name="name">Báo cáo đơn từ</field>
        <field name="res_model">popup.word.slip.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_popup_word_slip_report"
              name="Báo cáo đơn từ"
              parent="menu_sonha_report_slip"
              action="action_word_slip_work_report"
              sequence="3"/>
</odoo>