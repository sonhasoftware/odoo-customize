<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="popup_sonha_employee_report_form_view" model="ir.ui.view">
        <field name="name">popup.sonha.employee.report.form.view</field>
        <field name="model">popup.sonha.employee.report</field>
        <field name="arch" type="xml">
            <form string="Báo cáo hồ sơ nhân sự">
                <group>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="company_id"/>
                    <field name="department_domain" invisible="1"/>
                    <field name="department_id" domain="department_domain"/>
                    <field name="employee_domain" invisible="1"/>
                    <field name="employee_id" domain="employee_domain"/>
                    <field name="status_employee"/>
                </group>
                <footer>
                    <button string="Xác nhận" type="object" name="action_confirm" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_popup_sonha_employee_report" model="ir.actions.act_window">
        <field name="name">Báo cáo hồ sơ nhân sự</field>
        <field name="res_model">popup.sonha.employee.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_popup_sonha_employee_report"
              name="Báo cáo hồ sơ nhân sự"
              parent="menu_sonha_report_employee"
              action="action_popup_sonha_employee_report"
              sequence="1"/>
</odoo>