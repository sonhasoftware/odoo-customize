<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="config_car_tree_view" model="ir.ui.view">
        <field name="name">config.car.tree.view</field>
        <field name="model">config.car</field>
        <field name="arch" type="xml">
            <tree string="Số lượng xe" editable="bottom">
                <field name="company_id"/>
                <field name="number_of_car"/>
            </tree>
        </field>
    </record>

    <record id="config_car_action" model="ir.actions.act_window">
        <field name="name">Cấu hình số lượng xe</field>
        <field name="res_model">config.car</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>