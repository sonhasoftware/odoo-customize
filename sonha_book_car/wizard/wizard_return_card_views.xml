<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_return_card_form" model="ir.ui.view">
        <field name="name">wizard.return.card.form</field>
        <field name="model">wizard.return.card</field>
        <field name="arch" type="xml">
            <form string="Thông tin xe">
                <group>
                    <field name="receive_time"/>
                    <field name="return_people"/>
                    <field name="department_id" invisible="1"/>
                </group>
                <footer>
                    <button string="Xác nhận" type="object" name="action_confirm" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>